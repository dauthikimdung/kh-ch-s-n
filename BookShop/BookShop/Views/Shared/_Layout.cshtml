    <div class="clear"> </div>
    <div class="top-header" style="padding:0" >
        <div class="wrap">
            <!----start-logo---->
            <div class="logo">
                <a href="/"><img src="~/Assets/Client/images/logo.png" title="logo" style="width:150px;height:60px"/></a>
            </div>
            <!----end-logo---->
            <!----start-top-nav---->
            @{Html.RenderAction("MainMenu", "Home");}

        </div>
    </div>
    <!----End-top-nav---->
