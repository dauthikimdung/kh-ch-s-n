    @RenderSection("Login", required: false)



    <script>
        $(document).ready(function () {
            $("#slider-tintuc").owlCarousel({
                autoPlay: 3000,
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true
            });
            $("#spmoi").owlCarousel({

             
                autoPlay: 3000,
                // items : 4,
                //  itemsDesktop : [1199,3],
                //  itemsDesktopSmall : [979,3],
                //  itemsMobile : [768,2]
                itemsCustom: [
                    [0, 2],
                    [600, 3],
                    [1200, 4],
                ],
            });
            $("#spsapphathanh").owlCarousel({


                autoPlay: 3000,
                // items : 4,
                //  itemsDesktop : [1199,3],
                //  itemsDesktopSmall : [979,3],
                //  itemsMobile : [768,2]
                itemsCustom: [
                    [0, 2],
                    [600, 3],
                    [1200, 4],
                ],
            });

            $("#spbanchay").owlCarousel({


                autoPlay: 3000,
                // items : 4,
                //  itemsDesktop : [1199,3],
                //  itemsDesktopSmall : [979,3],
                //  itemsMobile : [768,2]
                itemsCustom: [
                    [0, 2],
                    [600, 3],
                    [1200, 4],
                ],
            });

        });
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(1000).slideUp(1000);
        $(document).ready(function () {

            //Khi bàn phím được nhấn và thả ra thì sẽ chạy phương thức này
          $("#FormRegister").validate({
                rules: {
                email: {
                    required: true,
                       email: true
                   },
                
                pass: {
                        required: true,
                        minlength: 5
                    },
                confirmPass:{
                        required: true,
                        minlength: 5,
                        equalTo: "#pass"

                    },
                    name: "required"
                },
                messages: {
                     email: {
                         required: "Email không được bỏ trống",
                         email:" Email không đúng định dạng"
                    },
                 
                     pass: {
                        required: "Vui lòng nhập mật khẩu",
                        minlength: "Mật khẩu phải từ 5 ký tự trở lên"
                    },
                     confirmPass: {
                        required: "Vui lòng nhập mật khẩu",
                        minlength: "Vui lòng nhập ít nhất 5 ký tự",
                        equalTo:"Mật khẩu không trùng"

                    },
                    name:"Vui lòng nhập họ tên"

                }
            });
        });


    </script>

  
